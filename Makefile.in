PACKAGE=paxos
DOC=paxos
include ../Makefile.defs

LIBPL=		@PLTARGETS@
TARGETS=	@TARGETS@
LIBS=		@LIBS@

all:		$(TARGETS)

install:	$(TARGETS) $(LIBPL)
		mkdir -p $(DESTDIR)$(SOLIBDIR)
		for f in $(TARGETS); do \
		  $(INSTALL_PROGRAM) $$f $(DESTDIR)$(SOLIBDIR); \
		done
		mkdir -p $(DESTDIR)$(PLBASE)/library
		for f in $(LIBPL); do \
		  $(INSTALL_DATA) $$f $(DESTDIR)$(PLBASE)/library; \
		done
		$(MKINDEX)

ln-install::
		$(MAKE) INSTALL_DATA="../ln-install" INSTALL_PROGRAM="../ln-install" install

rpm-install:	install

html-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL) -m 644 $(DOC).html $(DESTDIR)$(PKGDOCDIR)

pdf-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL) -m 644 $(DOC).pdf $(DESTDIR)$(PKGDOCDIR)

uninstall::
		(cd $(SOLIBDIR) && rm -f $(TARGETS))
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(MKINDEX)

################################################################
# Testing
################################################################

check::

################################################################
# Documentation
################################################################

TEXEXTRA=       libpaxos.tex
$(TEX):         $(TEXEXTRA)

libpaxos.tex:	paxos.pl
		$(PLTOTEX) --section --out=libpaxos $<

################################################################
# Clean
################################################################

clean:
		rm -f *~ *.o *% a.out core config.log

distclean:	clean
		rm -f $(TARGETS) config.cache config.h config.status Makefile
		rm -f $(DOC).aux $(DOC).log $(DOC).out $(DOC).toc
		rm -rf html
		rm -rf autom4te.cache
